<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoireeAVenir">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Les soirées à venir"
        app:layout_constraintBottom_toTopOf="@+id/etLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="709dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="24dp">

        <ListView
            android:id="@+id/lvSoirees"
            android:layout_width="409dp"
            android:layout_height="344dp"
            android:layout_marginTop="120dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAddSoiree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajouter ma soirée" />

            <Button
                android:id="@+id/buttonCarte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carte des soirées" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonDeconnection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deconnexion" />

            <Button
                android:id="@+id/buttonDelCompte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supprimer mon compte" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>