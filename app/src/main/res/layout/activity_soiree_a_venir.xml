<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SoireeAVenir">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Les soirées à venir"
            app:layout_constraintBottom_toTopOf="@+id/etLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <ListView
            android:id="@+id/lvSoirees"
            android:layout_width="369dp"
            android:layout_height="333dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

        </ListView>

        <Button
            android:id="@+id/buttonAddSoiree"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="250dp"
            android:layout_height="51dp"
            android:layout_marginTop="30dp"
            android:text="Ajouter ma soirée"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lvSoirees" />

        <Button
            android:id="@+id/buttonCarte"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Carte des soirées"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonAddSoiree" />

        <Button
            android:id="@+id/buttonDeconnexion"
            android:layout_width="250dp"
            android:layout_height="51dp"
            android:layout_marginTop="50dp"
            android:text="Deconnexion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCarte" />

        <Button
            android:id="@+id/buttonDelCompte"
            android:layout_width="250dp"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            android:text="Supprimer mon compte"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonDeconnexion" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>